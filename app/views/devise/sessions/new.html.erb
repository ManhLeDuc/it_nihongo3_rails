<container class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="col-6 shadow-lg p-3 mb-5 bg-white rounded" >
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form class="well form-horizontal " style="border:1px solid #cecece;">
        <legend>
          <center>
            <h2><b>LOG IN</b></h2>
          </center>
        </legend><br>

        <div class="form-group row">
          <%= f.label :email, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control"  %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "current-password", :class=>"form-control"  %>
          </div>
        </div>

        <div class="actions text-center">
          <%= f.submit "Log in", :class=>"btn btn-primary"%>
        </div>
        
        <div class="actions">
          <%= render "devise/shared/links"%>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</container>
