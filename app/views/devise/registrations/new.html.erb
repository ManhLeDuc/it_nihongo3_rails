<container class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="col-6 shadow-lg p-3 mb-5 bg-white rounded" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <form class="well form-horizontal " style="border:1px solid #cecece;">
        <legend>
          <center>
            <h2><b>SIGN UP</b></h2>
          </center>
        </legend><br>

        <div class="form-group row">
          <%= f.label :name, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :name, :class=>"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :age, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.number_field :age, :class=>"form-control"  %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :avatar, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.file_field :avatar, :class=>"form-control"  %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control"  %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, :class=>"col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control" %>
            <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, :class=>"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control"  %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class=>"btn btn-primary"%>
        </div>
        
        <div class="actions">
          <button class="btn btn-primary"><%= render "devise/shared/links"%></button>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</container>